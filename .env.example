# Ayaka AI Girlfriend System - Environment Variables Configuration Example
# Copy this file to .env and modify the corresponding configurations

# Application Configuration
FLASK_APP=ayaka.web.app:create_app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True

# LLM Configuration
LLM_PROVIDER=zhipu
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://open.bigmodel.cn/api/coding/paas/v4
LLM_MODEL=glm-4.5
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ayaka.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Data Storage
DATA_DIR=data
CONFIG_DIR=config
CACHE_DIR=cache

# Persona Default Settings
DEFAULT_PERSONA_STATE=private
DEFAULT_YANDERE_LEVEL=1

# Security Settings
CORS_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Settings
MAX_CONVERSATION_HISTORY=50
MAX_MESSAGE_LENGTH=10000
RESPONSE_TIMEOUT=60